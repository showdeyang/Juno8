/* ########## MAIN APPLICATION WINDOW ########## */

#mainApp {
}

#sidebarApp {
	background-color: #2A3C74;
}

#logoApp {
	background-color: #2A3C74;
}

#sidebarMenuApp {
	background-color: #2A3C74;
	font: 20px;
	padding-top: 30px;
}

QWidget {
	background-color: #9E93B4;
	font: 16px;
	color: #2A3C74;
}

QListWidget::item:alternate {
	background: #9E93B4;
	color: #2A3C74;
}

QTextEdit, QListView {
    	background-color: #D3D1D9;
}

QDialogButtonBox { 
	dialogbuttonbox-buttons-have-icons: 0;
}

QAbstractSpinBox {
	background: #D3D1D9;
}

/* ########## KEYBOARD PAGE  ########## */

#deviceInfoIcon {
	color: #2A3C74;
}

/* ########## LIST VIEW ########## */

QListView::item:alternate {
	background: #D3D1D9;
	color: #2A3C74;
}

QListView::item:!alternate:selected:active {
	background: qlineargradient(x1: 0, y1: 1, x2: 1, y2: 1,
        stop: 0 #2A3C74, stop: 0.499 #2A3C74,
        stop: 0.50 white, stop: 1.0 white);
}

QListView::item:selected:active {
	background: #2A3C74;
	color: white;
}

QListView::item:selected:!active {
	background: #2A3C74;
	color: white;
}

QListView::item:hover {
	background: #2A3C74;
	color: white;
}

QListView#listLayout::item:!alternate:selected:active {
	background: #2A3C74;
}

QListView#listVariant::item:!alternate:selected:active {
	background: #2A3C74;
}

/* ########## LINE EDIT ########## */

QLineEdit#LE_TestKeyboard {
	background: #D3D1D9;
	height: 25px;
	border-radius: 5px;	
}

QLineEdit#m_passphraseLineEdit, QLineEdit#vgName,
QLineEdit#m_confirmLineEdit { 
	background: #D3D1D9;
	border-radius: 5px;
}

QLineEdit#textBoxUserVerifiedPassword, QLineEdit#textBoxVerifiedRootPassword { 
	background: #D3D1D9;
	width: 220px;
	height: 25px;
	border-radius: 5px;
}

QLineEdit#textBoxFullName, QLineEdit#textBoxLoginName, QLineEdit#textBoxHostName,
QLineEdit#textBoxUserPassword, QLineEdit#textBoxRootPassword { 
	background: #D3D1D9;
	width: 220px;
	height: 25px;
	border-radius: 5px;
	margin-left: 120px;
}

#textBoxFullName, #textBoxLoginName, #textBoxHostName, #textBoxUserPassword,
#textBoxRootPassword, #textBoxAutoLogin, #vgName {
	font: 16px;
	border: 1px solid #2F343F;
	margin-left: 120px;
}

#textBoxUserVerifiedPassword, #textBoxVerifiedRootPassword, 
#LE_TestKeyboard, #m_confirmLineEdit, #m_passphraseLineEdit {
	font: 16px;
	border: 1px solid #2F343F;
}

/* ########## LABEL ########## */

#mainText {
	color: #2A3C74;
}

#partitionLabel {
	background: #9E93B4;
}

#partitionLabelsView {
	background: #9E93B4;
}

#CreatePartitionDialog {
	background: #9E93B4;	
}

#partResizerWidget {
	border: 1px solid #2A3C74;
}

#m_previewBeforeFrame, #m_previewAfterFrame {
	background: #9E93B4;
}

#labelWhatIsYourName {
	margin-top: 90px;
	margin-left: 120px;
}

#username_label_2, #hostname_label_2, #password_label_2,
#checkBoxValidatePassword, #checkBoxAutoLogin, #labelChooseRootPassword {
	margin-top: 10px;
	margin-left: 120px;
}

#checkBoxReusePassword, #checkBoxDoAutoLogin {
	margin-left: 120px;
}

#labelFullNameError, #labelUsernameError,
#labelHostnameError, #labelUserPasswordError,
#labelRootPasswordError {
	color: #000000;
}

/* ########## COMBO BOX ########## */

QComboBox {
	background: #9E93B4;
    	selection-background-color: #2A3C74;
	font: 16px;
	min-width: 300px;
}

QComboBox::down-arrow {
	background: #D3D1D9;
	image: url(/etc/calamares/branding/xerolinux/img/launchpad_16x16.png);
	width: 14px;
	height: 14px;
}

QComboBox::item:selected {
	background: #2A3C74;
    	color: #FFFFFF;
	padding: 5px;
}

#mountPointComboBox:editable {
	background: #D3D1D9;
}

#mountPointComboBox {
    	selection-background-color: #2A3C74;
}

#mountPointComboBox::drop-down {
	background: #D3D1D9;
	padding-left: 2px;
	border: 1px;
	border-left-color: #D3D1D9;
	border-top-color: #D3D1D9;
	border-right-color: #3B3B3B;
	border-bottom-color: #3B3B3B;
	border-style: solid;
}

/* ########## SPIN BOX ########## */

QSpinBox {
	border-width: 1px;
	border-style: solid;
	border-color: #2A3C74;
	height: 24px;
}

QSpinBox::up-button {
	width: 18px;
}

QSpinBox::down-button {
	width: 18px;
}

/* ########## TREE VIEW ########## */

QTreeView {
	background: #D3D1D9;
	font: 14px;
	show-decoration-selected: 0;
}

QTreeView::item {
	border: 1px dotted #2A3C74;
	border-top-color: transparent;
	border-bottom-color: transparent;
}

QTreeView::item:selected {
	background: #2A3C74;
}

QTreeView::branch:has-siblings:!adjoins-item {
	border-image: url(/etc/calamares/branding/xerolinux/img/branch_vline.png) 0;
}

QTreeView::branch:has-siblings:adjoins-item {
	border-image: url(/etc/calamares/branding/xerolinux/img/branch_more.png) 0;
}

QTreeView::branch:!has-children:!has-siblings:adjoins-item {
	border-image: url(/etc/calamares/branding/xerolinux/img/branch_end.png) 0;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings {
        border-image: none;
        image: url(/etc/calamares/branding/xerolinux/img/branch_closed.png);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings  {
        border-image: none;
        image: url(/etc/calamares/branding/xerolinux/img/branch_open.png);
}

/* ########## HEADER VIEW ########## */

QHeaderView::section {
	background-color: #45385F;
	color: white;
	border: 1px dotted white;
	padding-left: 4px;
}

/* ########## TOOLTIP ########## */

QToolTip {
	background: #52134C;
        font : 16px;
	color: #DCD0DB;
	border: none;
	padding: 3px;
}

/* ########## BUTTONS GENERAL A/GENERAL B/SUBCATEGORY ########## */

QPushButton {
	background-color: #D3D1D9;
    	border: 1px solid #2A3C74;
	border-top-right-radius: 10px;
	border-bottom-left-radius: 10px;
    	min-width: 4em;
    	padding: 6px;
}

QPushButton:pressed {
    	background-color: #7F3FBF;
    	color: #9E93B4;
}

QPushButton:hover {
	background-color: #2A3C74;
	color: #9E93B4;
}

QPushButton#view-button-modify, QPushButton#createButton, 
QPushButton#deleteButton, QPushButton#editButton {
	background-color: #9E93B4;
}

QPushButton#view-button-modify:pressed, QPushButton#createButton:pressed, 
QPushButton#deleteButton:pressed, QPushButton#editButton:pressed {
	background-color: #7F3FBF;
    	color: #9E93B4;
}

QPushButton#view-button-modify:hover, QPushButton#createButton:hover, 
QPushButton#deleteButton:hover, QPushButton#editButton:hover {
	background-color: #2A3C74;
}

QPushButton#newPartitionTableButton, QPushButton#newVolumeGroupButton, 
QPushButton#resizeVolumeGroupButton, QPushButton#deactivateVolumeGroupButton, 
QPushButton#removeVolumeGroupButton {
	background-color: #978FA7;
    	font: 13px;
	padding: 5px;
}

QPushButton#newPartitionTableButton:pressed, QPushButton#newVolumeGroupButton:pressed, 
QPushButton#resizeVolumeGroupButton:pressed, QPushButton#deactivateVolumeGroupButton:pressed, 
QPushButton#removeVolumeGroupButton:pressed, QPushButton#buttonRestore:pressed {
	background-color: #7F3FBF;
    	color: #9E93B4;
}

QPushButton#newPartitionTableButton:hover, QPushButton#newVolumeGroupButton:hover, 
QPushButton#resizeVolumeGroupButton:hover, QPushButton#deactivateVolumeGroupButton:hover, 
QPushButton#removeVolumeGroupButton:hover, QPushButton#buttonRestore:hover {
	background-color: #2A3C74;
}

#buttonRestore {
	image: url(/etc/calamares/branding/xerolinux/img/restore_.png);
}

#buttonRestore:hover {
	image: url(/etc/calamares/branding/xerolinux/img/restore_hov.png);
}

#debugButton {
	background-color: #2A3C74;
	font: bold 8px;
	color: #9E93B4;
	height: 32px;
    	padding: 0px;
	border: none;
}

#debugButton:pressed {
	color: #7F3FBF;
}

#debugButton:hover {
	color: #FFFFFF;
}

#aboutButton {
	background-color: none;
	font: 16px;
	color: #2A3C74;
    	border: none;
}

#aboutButton:pressed {
	color: #7F3FBF;
}

#aboutButton:hover {
	color: #7F3FBF;
}

/* ########## RADIO BUTTON ########## */

QRadioButton {
	color: #2A3C74;
	padding-left: 3px;
}

QRadioButton::indicator {    	
	width: 16px;
	height: 16px;
}

QRadioButton::indicator::unchecked {
    image: url(/etc/calamares/branding/xerolinux/img/radiobutton_unchecked.png);
}

QRadioButton::indicator::checked {
    image: url(/etc/calamares/branding/xerolinux/img/radiobutton_checked.png);
}

/* ########## CHECK BOX ########## */

QCheckBox {
	spacing: 5px;
}

QCheckBox::indicator:unchecked {
	image: url(/etc/calamares/branding/xerolinux/img/checkbox_unchecked.png);
}

QCheckBox::indicator:checked {
	image: url(/etc/calamares/branding/xerolinux/img/checkbox_checked.png);
}

QItemSelectionModel::Select {
	image: url(/etc/calamares/branding/xerolinux/img/checkbox_checked.png);
}

/* ########## PROGRESS BAR ########## */

QProgressBar {
	background-color: #978FA7;
	color: #FFFFFF;
    	border: 2px solid #2A3C74;
   	border-radius: 0px;
	text-align: center;
}

QProgressBar::chunk {
    	background-color: #2A3C74;
}

/* ########## SCROLL BAR ########## */

QScrollBar:vertical {
     border: 1px solid #6F6583;
     background: #D3D1D9;
     width: 20px;
     margin: 24px 0 24px 0;
}

QScrollBar::handle:vertical {
     background: #6F6583;
     max-height: 25px;
}

QScrollBar::sub-line:vertical {
     border: none;
     background: none;
     height: 20px;
     subcontrol-position: top;
     subcontrol-origin: margin;
}

QScrollBar::add-line:vertical {
     border: none;
     background: none;
     height: 20px;
     subcontrol-position: bottom;
     subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical {
     border: none;
     width: 12px;
     height: 8px;
     background: none;
     image: url(/etc/calamares/branding/xerolinux/img/up-arrow.png);
}

QScrollBar::down-arrow:vertical {
     border: none;
     width: 12px;
     height: 8px;
     background: none;
     image: url(/etc/calamares/branding/xerolinux/img/branch_open.png);
}

 QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
     background: none;
}


